pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('Set Permissions') {
            steps {
                sh 'chmod +x gradlew'
            }
        }
        stage("Compile") {
            steps {
                sh "demo/gradlew compileJava"
            }
        }
        stage("Unit test") {
            steps {
                sh "demo/gradlew test"
            }
        }
        stage("Code coverage") {
            steps {
        	    sh "demo/gradlew jacocoTestReport"
        	 	publishHTML (target: [
         	        reportDir: 'build/reports/jacoco/test/html',
         			reportFiles: 'index.html',
         			reportName: 'JacocoReport'
         	    ])
         		sh "demo/gradlew jacocoTestCoverageVerification"
         	}
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh 'demo/gradlew sonarqube'
                }
            }
        }
    }
}